{
    "name": "fabrix",
    "version": "1.0.0",
    "description": "FabriX - Premium fabrics and custom clothing solution",
    "main": "index.js",
    "scripts": {
      "start": "node server/dist/app.js",
      "server": "npm run dev --prefix server",
      "client": "npm start --prefix client",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
      "build": "npm run build --prefix server && npm run build --prefix client",
      "install-all": "npm install && npm install --prefix server && npm install --prefix client",
      "test": "npm test --prefix server && npm test --prefix client",
      "lint": "npm run lint --prefix server && npm run lint --prefix client",
      "prepare": "husky install"
    },
    "repository": {
      "type": "git",
      "url": "git+https://github.com/your-username/fabrix.git"
    },
    "keywords": [
      "ecommerce",
      "fabrics",
      "clothing",
      "custom",
      "mern"
    ],
    "author": "FabriX Team",
    "license": "MIT",
    "bugs": {
      "url": "https://github.com/your-username/fabrix/issues"
    },
    "homepage": "https://github.com/your-username/fabrix#readme",
    "devDependencies": {
      "concurrently": "^8.2.2",
      "husky": "^8.0.3",
      "lint-staged": "^15.2.0"
    },
    "lint-staged": {
      "*.{js,ts}": [
        "eslint --fix"
      ],
      "*.{json,md,yaml,yml}": [
        "prettier --write"
      ]
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }